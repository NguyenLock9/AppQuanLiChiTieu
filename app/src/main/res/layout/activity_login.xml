<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A77B0"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@drawable/logo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN INFORMATION"
        android:textSize="30sp"
        android:textColor="#130E0E"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_conner_16"
        android:drawableLeft="@drawable/icon_person"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Tên Đăng Nhập"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_conner_10_border_grey"
        android:drawableLeft="@drawable/icon_security"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Mật Khẩu"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp">
        <CheckBox
            android:id="@+id/chkRememberMe"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:text="Lưu Đăng Nhập" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:gravity="right"
            android:layout_marginLeft="30dp"
            android:textSize="19sp"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edt_backgroud"
        android:backgroundTint="@color/vangnhat"
        android:onClick="btnDangNhap_onClick"
        android:text="Đăng Nhập"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_backgroud"
        android:text="Đăng Kí"
        android:textSize="20dp" />

</LinearLayout>