<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="450dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtVTTCN"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Thông tin cá nhân"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:padding="8dp"
                android:layout_marginRight="20dp"
                android:gravity="fill"/>

            <TextView
                android:id="@+id/txtVchinhsua1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:drawableLeft="@drawable/baseline_mode_edit_24"
                android:layout_marginLeft="50dp"
                android:text="Chính sửa"
                android:textColor="#2A869E"
                android:padding="8dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="39dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_lich" />

            <TextView
                android:id="@+id/txtVNgaysinh"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="Ngày sinh:"
                android:gravity="center|left"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtVTTngaysinh"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/gioitinh" />

            <TextView
                android:id="@+id/txtGioitinh"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Giới tính:"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtVTTGioitinh"
                android:layout_width="262dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/thecancuoc" />

            <TextView
                android:id="@+id/txtVCMND"
                android:layout_width="159dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:text="CMND/CCCD:"
                android:gravity="center|left"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtVTTCMND"
                android:layout_width="181dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:text=""
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="61dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/presence_online" />

            <TextView
                android:id="@+id/txtVTTHĐ"
                android:layout_width="159dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:gravity="left|center"
                android:text="Trạng thái hoạt động:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtVTTTTHĐ"
                android:layout_width="221dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTTLH"
                android:layout_width="150dp"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:text="Thông tin liên hệ"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/txtVchinhsua2"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:drawableLeft="@drawable/baseline_mode_edit_24"
                android:layout_marginLeft="50dp"
                android:text="Chính sửa"
                android:textColor="#2A869E"
                android:padding="8dp"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_email" />

            <TextView
                android:id="@+id/txtVemailsevice"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Email:"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/txtVTTemailsevice"
                android:layout_width="223dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text=""
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_phone" />

            <TextView
                android:id="@+id/txtVSđt"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Số điện thoại:"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtVTTSđt"
                android:layout_width="220dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text=""
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>